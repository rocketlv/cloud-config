spring:
  config:
    customer-url: http://localhost:8080/api/customers
    products-url: http://localhost:8080/api/products
    payments-url: http://localhost:8080/api/payments
  datasource:
    url: jdbc:postgresql://localhost:5432/orders
    initialize: true
    username: postgres
    password: secret
  sql:
    init:
      mode: always    
  jpa:
    defer-datasource-initialization: true
    show-sql: true
    hibernate:
      ddl-auto: create
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
